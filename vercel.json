{
  "buildCommand": "next build",
  "builds": [
    { "src": "package.json", "use": "@vercel/next", "config": {
        "maxLambdaSize": "450mb"
      } },
    { "src": "app/api/main.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "app/api/main.py" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}